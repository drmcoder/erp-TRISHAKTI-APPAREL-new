# Production Environment Configuration
# TSA ERP Work Assignment System

# API Configuration
VITE_API_BASE_URL=https://api.tsa-erp.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-production-api-key
VITE_FIREBASE_AUTH_DOMAIN=tsa-erp-production.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=tsa-erp-production
VITE_FIREBASE_STORAGE_BUCKET=tsa-erp-production.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Security Configuration
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_SENTRY=true
VITE_SENTRY_DSN=your-sentry-dsn

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_AI_RECOMMENDATIONS=true

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_CODE_SPLITTING=true
VITE_ENABLE_LAZY_LOADING=true

# Monitoring and Error Reporting
VITE_ERROR_REPORTING_ENDPOINT=https://api.tsa-erp.com/errors
VITE_PERFORMANCE_ENDPOINT=https://api.tsa-erp.com/metrics
VITE_ANALYTICS_ENDPOINT=https://api.tsa-erp.com/analytics

# Application Metadata
VITE_APP_NAME="TSA ERP - Production"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Work Assignment System for TSA Manufacturing"

# Internationalization
VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,ne

# Cache Configuration
VITE_CACHE_VERSION=v1
VITE_CACHE_TTL=3600000

# Notification Configuration
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# CDN Configuration
VITE_CDN_URL=https://cdn.tsa-erp.com
VITE_STATIC_ASSETS_URL=https://static.tsa-erp.com